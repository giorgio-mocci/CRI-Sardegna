        <br>


      </div>
      <!-- COLONNA 4 -->
      <div class="col">
        <label for="Competenze" class="form-check-label">OPSA</label>
        <input type="checkbox" name="competenze" value="OPSA" id="OPSA">
        <br>
        <label for="Competenze" class="form-check-label">Operatore Dae</label>
        <input type="checkbox" name="competenze" value="Operatore Dae" id="Comp_Operatore_Dae">
        <br>
