  <form class="Form-SignUP" id="reg_form" action="pre-autorizzazione" method="post">





    <div class="Titolo-Paragrafo">
      <br>
      <h2>Registrati Ora</h2>
    </div>




    <br>


    <div class="row">


      <!-- colonna 1 -->
      <div class="col">

        <input  name="nome" type="text" class="inputForm" placeholder="Nome">
        <br>
        <br>
        <input id="password" name="password" type="password" class="inputForm" placeholder="Password">
        <br><br>
        <input id="Email" name="email" type="email" class="inputForm" placeholder="Email">
        <br><br>
        <input type="tel" id="phone" name="telefono" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" placeholder="Telefono" class="inputForm">
      </div>
      <!-- colonna 2 -->
      <div class="col">

        <input  name="cognome" type="text" class="inputForm" placeholder="Cognome">
        <br><br>
        <input id="confirm_password" name="confirm_password" type="password" class="inputForm" placeholder="Conferma Password">
        <br><br>
        <input type="text" id="iscritti_codicefiscale" name="cf" class="inputForm" placeholder="Codice Fiscale">
        <br><br>
        <div class="Termini-condizioni">
          Ho letto e accetto i <a href="termini-condizioni" style="color : red;"> termini e le condizioni </a>
          <input type="checkbox" name="termini_condizioni" value="Termini-condizioni" id="terms-condition">
        </div>
      </div>
    </div>

    <br>

    <hr>

    <!-- Inserimento comitati -->
    <p>
    <div class="Comitati">
      <h5 id="err">Comitato di Appartenenza :</h5>
      <br>
      <input type="radio" name="comitato" value="Bosa">
      <label for="Bosa">Bosa</label>

      <input type="radio"  name="comitato" value="Cagliari">
      <label for="Cagliari">Cagliari</label>

      <input type="radio"  name="comitato" value="Nuoro">
      <label for="Nuoro">Nuoro</label>

      <input type="radio"  name="comitato" value="Olbia">
      <label for="Olbia">Olbia</label>

      <input type="radio" name="comitato" value="Oristano">
      <label for="Oristano">Oristano</label>

      <input type="radio" name="comitato" value="Sassari">
      <label for="Sassari">Sassari</label>
      <br>
      <hr>

    </div>


    <!-- Inserimento competenze -->

    <h5 style="text-align: center;">Competenze:</h5>
    <br>
    <div class="row">
      <!-- COLONNA 1 -->
      <div class="col">
        <label for="Competenze" class="form-check-label">Montaggio tende ministeriali</label>
        <input type="checkbox" name="competenze" value="Montaggio tende ministeriali" id="Comp_tende_ministeriali">
        <br>
