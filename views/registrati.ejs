        <input type="checkbox" name="competenze" value="Utilizzo Idrovora" id="Comp_Utilizzo Idrovora">




      </div>
      <!-- COLONNA 2 -->
      <div class="col">
        <label for="Competenze" class="form-check-label">Montaggio tende pneumatiche</label>
        <input type="checkbox" name="competenze" value="Montaggio tende pneumatiche" id="Comp_tende ministeriali">
        <br>
        <label for="Competenze" class="form-check-label">Patente Mezzi CRI in emergenza</label>
        <input type="checkbox" name="competenze" value="Patente Mezzi CRI in emergenza" id="Comp_Patente_Mezzi_CRI">
        <br>
        <label for="Competenze" class="form-check-label">Infermiere</label>
        <input type="checkbox" name="competenze" value="Infermiere" id="Comp_Infermiere">
        <br>
        <label for="Competenze" class="form-check-label">Psicologo</label>
        <input type="checkbox" name="competenze" value="Psicologo" id="Comp_Psicologo">
        <br>
        <label for="Competenze" class="form-check-label">Segreteria</label>
        <input type="checkbox" name="competenze" value="Segreteria" id="Comp_Segreteria">
        <br>


      </div>
      <!-- COLONNA 3 -->
